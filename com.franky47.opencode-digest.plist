<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.franky47.opencode-digest</string>

    <key>ProgramArguments</key>
    <array>
        <string>$HOME/.bun/bin/bun</string>
        <string>run</string>
        <string>$WORKSPACE/run.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>$WORKSPACE</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin:/usr/local/bin/gh</string>
    </dict>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>6</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>$HOME/.local/share/opencode-digest/out.log</string>

    <key>StandardErrorPath</key>
    <string>$HOME/.local/share/opencode-digest/err.log</string>

    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>